{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        // Path mapping configuration
        "baseUrl": "./src",
        "paths": {
            "@controllers/*": [
                "controllers/*"
            ],
            "@controllers": [
                "controllers"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@routes": [
                "routes"
            ],
            "@middleware/*": [
                "core/middleware/*"
            ],
            "@middleware": [
                "core/middleware"
            ],
            "@utilities/*": [
                "core/utilities/*"
            ],
            "@utilities": [
                "core/utilities"
            ],
            "@models/*": [
                "core/models/*"
            ],
            "@models": [
                "core/models"
            ],
            "@db": [
                "core/utilities/database"
            ],
            "@/types": [
                "types"
            ],
            "@/types/*": [
                "types/*"
            ],
            "@auth": [
                "core/utilities/credentialingUtils"
            ] // Auth utilities
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}